<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kankana.kankana.HomeFragment"
    android:clickable="false"
    android:nestedScrollingEnabled="false">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="1"
        android:rowCount="3">


    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal|top"
        android:src="@drawable/kankana_no_bg"
        android:layout_marginTop="10dp"
        android:layout_row="0"
        android:layout_column="0"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/HomeText"
        android:layout_gravity="center"
        style="@style/Base.Widget.AppCompat.PopupMenu"
        android:autoText="false"
        android:background="@android:color/transparent"
        android:maxLines="30"
        android:textAlignment="gravity"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="normal"
        android:layout_margin="10dp"
        android:gravity="center"
        android:layout_row="1"
        android:layout_column="0"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:columnCount="6"
        android:rowCount="1"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="10dp"
        android:layout_row="2"
        android:layout_column="0">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/facebookImage"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@drawable/facebook"
            android:onClick="myClickMethod" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/twitterImage"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@drawable/twitter_50"
            android:onClick="myClickMethod"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/googlePlusImage"
            android:layout_row="0"
            android:layout_column="2"
            android:background="@drawable/google_plus_50"
            android:onClick="myClickMethod"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/emailIdImage"
            android:layout_column="3"
            android:background="@drawable/mail_color_50"
            android:layout_row="0"
            android:onClick="myClickMethod"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phoneImage"
            android:layout_column="4"
            android:background="@drawable/phone_50"
            android:layout_row="0"
            android:onClick="myClickMethod"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/webSIteImage"
            android:layout_row="0"
            android:layout_column="5"
            android:background="@drawable/website_color_50"
            android:onClick="myClickMethod"/>
    </GridLayout>
    </GridLayout>
</FrameLayout>
